{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "paths": {
      "@uikit/*": ["src/renderer/modules/UiKit/*"],
      "@core/*": ["src/renderer/modules/Core/*"],
      "@assets/*": ["src/renderer/assets/*"],
      "@styles/*": ["src/renderer/styles/*"],
      "@styles": ["src/renderer/styles/index.ts"],
      "@store/*": ["src/renderer/store/*"],
      "@store": ["src/renderer/store/index.ts"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "exclude": [
    "test",
    "release",
    "intermediate",
    "src/main/node_modules",
    "node_modules"
  ]
}
